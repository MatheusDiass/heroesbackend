    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^15.8.0",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.8.0",
    "nodemon": "^2.0.20",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
